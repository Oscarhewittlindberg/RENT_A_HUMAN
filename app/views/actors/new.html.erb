<p id="notice"><%= notice %></p>

<%= simple_form_for(@actor) do |f| %>
  <% if @actor.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @actor.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :age %>
    <%= f.input :sex %>
    <%= f.input :category %>
    <%= f.input :location %>
    <%= f.input :price %>
    <%= f.input :bio %>
    <%= f.input :image %>
    <%= f.input :image_cache, as: :hidden %>
  </div>

  <div class="form-actions">
    <%= f.submit "Save", class: "btn btn-primary my-2 my-sm-0 ml-2"%>
  </div>
<% end %>

