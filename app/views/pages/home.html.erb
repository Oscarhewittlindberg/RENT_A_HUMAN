<header class="jumbotron jumbotron-fluid">
    <div class="container-fluid text-center">
       <h1 class="display-3">Rent a Human</h1>
       <h3>We help you find a person for any occasion</h3>
        <p> <%= link_to "See all listings", actors_path, class: "btn btn-primary btn-lg" %> </p>
    </div>
</header>

<section id="services" class="container">
   <h2 class="display-4 text-center mt-5 mb-3">Our Services</h2>

   <div class="row text-center">
      <div class="col-md-4 mb-4">
         <div class="card h-100">
             <%= image_tag "special event.svg", class: "landing-card-image"%>
                <div class="card-body">
               <h4 class="card-title">Customized Experiences</h4>
               <p class="card-text">Choose from over 10,000 impersonators for 1-on-1 experiences based on your goals and interests.</p>
            </div>
         </div>
      </div>

      <div class="col-md-4 mb-4">
         <div class="card h-100">
             <%= image_tag "money.svg", class: "landing-card-image"%>
            <div class="card-body">
               <h4 class="card-title">Pay Per Hour</h4>
                  <p class="card-text">On Rent a Human you only pay per hour and at the price that meets your budget.</p>
              </div>
         </div>
      </div>

      <div class="col-md-4 mb-4">
         <div class="card h-100">
            <%= image_tag "waiting for you.svg", class: "landing-card-image"%>
              <div class="card-body">
               <h4 class="card-title">Anytime, Anywhere</h4>
               <p class="card-text">Meet an impersonator at the time and place that suits you.</p>
            </div>
         </div>
      </div>
   </div>
</section>

<section class="container-fluid text-center py-4 mt-4" id="contact">
   <h2 class="display-4 pb-4 my-4">Contact Rent a Human</h2>
   <p class="lead pb-3">Send us a message and we will get back to you as soon as possible.</p>
   <a href="#" class="btn btn-primary btn-lg mb-4" role="button">Contact us</a>
</section>


